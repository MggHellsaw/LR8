@using LR8.Models;

@model List<Product>

<h2>Список продуктів</h2>

<ul>
    @foreach (var product in Model)
    {
        <li>@product.ID. @product.Name - @product.Price$ (@product.CreatedDate)</li>
    }
</ul>

<style>
    table {
        border-collapse: separate;
        border-spacing: 0;
    }

    th, td {
        border-left: 1px solid black; /* Вертикальний роздільник */
        padding: 8px; /* Додатковий відступ */
    }

    th:first-child, td:first-child {
        border-left: none; /* Відключаємо роздільник для першої комірки */
    }

    th:last-child, td:last-child {
        border-right: none; /* Відключаємо роздільник для останньої комірки */
    }
</style>

<h2>Таблиця продуктів</h2>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Price</th>
        <th>Created Date</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.ID</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>@product.CreatedDate</td>
        </tr>
        <tr>
            <td colspan="4"><hr></td> <!-- Горизонтальний роздільник -->
        </tr>
    }
</table>